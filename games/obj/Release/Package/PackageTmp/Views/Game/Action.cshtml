@model games.Models.Typelink
@{
    ViewBag.Title = "Action";
    Layout = "~/Views/Shared/_Layout-2.cshtml";
}


<link rel="stylesheet" href="@Url.Content("~/Content/Browse.css")">
<header></header>
<!-- ---- container ---- -->
<div class="container clearfix fixed-width">
    <div class="row">

        <div class="col-lg-3">

            <h1 class="my-4 text-white">@ViewBag.game_type</h1>
            <div class="list-group">
                @foreach (var item in Model.gametype)
                {
                    @Html.ActionLink(item.type_name, "Action", new { type = item.type_no }, new { @class = "list-group-item bg-dark text-white" })
                }
            </div>

        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">

            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="~/game/DARK SOULS™ III/ss_5efd318b85a3917d1c6e717f4cb813b47547cd6f.1920x1080.jpg" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>DARK SOULS III</h5>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/game/This War of Mine/ss_eb333d7e52532a937fc5ecd6fc17ce5270a21e6d.1920x1080.jpg" alt="Second slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>This War of Mine</h5>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/game/PLAYERUNKNOWN'S BATTLEGROUNDS/ss_109d7072cf85f5b3b1e3dacadf3009718db451c4.1920x1080.jpg" alt="Third slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>PLAYERUNKNOWN'S BATTLEGROUNDS</h5>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <div class="row">
                <div class="select fixed-width">
                    <select>
                        <option>上架: 新→舊</option>
                        <option>上架: 舊→新</option>
                        <option>熱門</option>
                        <option>價錢：低→高</option>
                        <option>價錢：高→低</option>
                    </select>

                </div>
                <!-- pruduct -->
                <div class="pruduct-demo">
                    <!-- 商品1 -->
                    @foreach (var item in Model.gamelist)
                    {
                        <a href="#" class="text-white">
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="card h-100">

                                    <img class="card-img-top" src="~/game/@item.game_name/@item.game_image" alt="">

                                    <div class="card-body">
                                        <h4 class="card-title">
                                            @Html.DisplayFor(modelItem => item.game_name)
                                        </h4>
                                        <h5>@Html.DisplayFor(modelItem => item.price)</h5>
                                        <p class="card-text">
                                            @Html.DisplayFor(modelItem => item.game_remark)
                                        </p>
                                    </div>
                                    <div class="card-footer">
                                        <small class="text-white">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                                    </div>
                                </div>
                            </div>
                        </a>
                        <!-- /商品1 -->
                    }

                </div>
                <!-- /pruduct -->


            </div>
            <!-- /pruduct -->
            <!-- page -->
            <div class="page">
                <ul class="pagination">
                    <li class="disabled">
                        <a href="#">«</a>
                    </li>
                    <li class="active">
                        <a href="#">
                            1
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">2</a>
                    </li>
                    <li>
                        <a href="#">3</a>
                    </li>
                    <li>
                        <a href="#">4</a>
                    </li>
                    <li>
                        <a href="#">5</a>
                    </li>
                    <li>
                        <a href="#">»</a>
                    </li>
                </ul>
            </div>
            <!-- /page -->
        </div>
        <!-- /.row -->

    </div>
    <!-- /.col-lg-9 -->

</div>
<!-- /.row -->
